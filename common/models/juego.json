{
  "name": "Juego",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "nombre": {
      "type": "string",
      "required": true
    },
    "descripcion": {
      "type": "string"
    },
    "imagen": {
      "type": "string"
    },
    "grupal": {
      "type": "boolean"
    }
  },
  "validations": [],
  "relations": {
    "coordinadores": {
      "type": "hasAndBelongsToMany",
      "model": "Usuario",
      "foreignKey": ""
    },
    "ownerId": {
      "type": "belongsTo",
      "model": "Usuario",
      "foreignKey": "creador"
    },
    "pruebas": {
      "type": "hasMany",
      "model": "Prueba",
      "foreignKey": ""
    },
    "grupos": {
      "type": "hasMany",
      "model": "Grupo",
      "foreignKey": ""
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "create"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "docente",
      "permission": "ALLOW",
      "property": "create"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "alumno",
      "permission": "ALLOW",
      "property": "__create__grupos"
    }
  ],
  "methods": {
    "prototype.getNombre": {
      "accepts": [],
      "returns": [
        {
          "arg": "nombre",
          "type": "string",
          "root": false,
          "description": "El nombre del Juego"
        }
      ],
      "description": "Devuelve el nombre de un Juego enviado como par√°metro",
      "http": [
        {
          "path": "/getNombre",
          "verb": "get"
        }
      ]
    }
  }
